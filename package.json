{
  "name": "webpack-library-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate code for front-end javascript libraries using webpack 4 and babel 7, with Sass support and Jest as test runner",
  "private": true,
  "main": "src/index.js",
  "files": [
    "dist",
    "src/sass"
  ],
  "scripts": {
    "dev": "webpack --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack-dev-server --config webpack.dev.js --hot --open",
    "test": "jest tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Frondor/webpack-library-boilerplate.git"
  },
  "engines": {
    "node": ">= 8"
  },
  "keywords": [
    "browser",
    "library",
    "javascript",
    "project",
    "boilerplate",
    "es6",
    "webpack",
    "babel",
    "sass",
    "scss",
    "jest"
  ],
  "author": "Frondor",
  "license": "MIT",
  "homepage": "https://github.com/Frondor/webpack-library-boilerplate#readme",
  "sideEffects": false,
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "autoprefixer": "^9.1.5",
    "css-loader": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1"
  }
}
